{
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "function",
          "if",
          "else",
          "each",
          "include",
          "mixin",
          "return"
        ]
      }
    ],
    "property-no-unknown": [
      true,
      {
        "ignoreProperties": [
          "content-visibility",
          "contain-intrinsic-size"
        ]
      }
    ]
  },
  "extends": ["stylelint-config-standard", "stylelint-config-prettier"]
}
