  "scripts": {
    "clean": "rm -rf resources/dist",
    "dev": "npm run clean && webpack --config ./config/webpack.config.js --env.dev && gulp ",
    "dev:all": "npm run clean && webpack --config ./config/webpack.config.js --env.dev --env.outputs='index, amp:css, story:css, story-video:css, dlite-story:css, lite-story:css, paywall:css, basic:css, signwall:css' && gulp",
    "dev:amp": "npm run clean && webpack --config ./config/webpack.config.js --env.dev --env.outputs='amp:css'",
    "dev:basic": "npm run clean && webpack --config ./config/webpack.config.js --env.dev --env.outputs='basic:css'",
    "dev:lite": "npm run clean && webpack --config ./config/webpack.config.js --env.dev --env.outputs='lite-story:css, dlite-story:css'",
    "dev:story": "npm run clean && webpack --config ./config/webpack.config.js --env.dev --env.outputs='story:css, story-video:css'",
    "fusion": "fusion",
    "lint": "npm run eslint && npm run stylelint",
    "prod": "npm run clean && webpack --config ./config/webpack.config.js --env.prod && gulp",
    "prod:all": "npm run clean && webpack --config ./config/webpack.config.js --env.prod --env.outputs='index, story:css, story-video:css, dlite-story:css, lite-story:css, amp:css, paywall:css, basic:css, signwall:css' && gulp",
    "prod:amp": "npm run clean && webpack --config ./config/webpack.config.js --env.prod --env.outputs='amp:css'",
    "prod:basic": "npm run clean && webpack --config ./config/webpack.config.js --env.prod --env.outputs='basic:css'",
    "prod:lite": "npm run clean && webpack --config ./config/webpack.config.js --env.prod --env.outputs='lite-story:css, dlite-story:css'",
    "prod:story": "npm run clean && webpack --config ./config/webpack.config.js --env.prod --env.outputs='story:css, story-video:css'",
    "pw:clean": "rm -rf components/features/paywall/dist",
    "pw:mv": "npm run dev:all && cp -a resources/dist components/features/paywall",
    "start": "fusion start",
    "test": "jest",
    "test:coverage": "set CI=true && jest --verbose --color --coverage --watchAll=false ./components/ ./src/ || true",
    "test:watch": "jest --watch",
    "watch": "npm run clean && webpack --config ./config/webpack.config.js --watch --env.dev --env.outputs='index, story:css, story-video:css, dlite-story:css, lite-story:css, amp:css, paywall:css, signwall:css' ",
    "watch:amp": "npm run clean && webpack --config ./config/webpack.config.js --watch --env.dev --env.outputs='amp:css'",
    "watch:lite": "npm run clean && webpack --config ./config/webpack.config.js --watch --env.dev --env.outputs='lite-story:css, dlite-story:css'",
    "watch:story": "npm run clean && webpack --config ./config/webpack.config.js --watch --env.dev --env.outputs='story:css, story-video:css'",
    "eslint": "eslint . --ext=js,jsx",
    "eslint:fix": "eslint --ext=js,jsx --fix .",
    "stylelint": "stylelint 'src/**/*.scss'",
    "prettier:check": "prettier 'src/**/*.scss' --check",
    "prettier:fix": "prettier 'src/**/*.scss' --write",
    "zip": "npm run pw:clean && npm run prod:all && npx fusion zip"
  },
  "lint-staged": {
    "*.{js,jsx,json,css,scss,md,graphql}": [
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "eslint"
    ],
    "*.{css,scss}": [
      "stylelint"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "automock": false,
    "verbose": true,
    "testURL": "http://localhost/",
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "globals": {
      "NODE_ENV": "test"
    },
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 85,
        "functions": 85,
        "lines": 85
      }
    },
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/components/utilities/thumbs.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.[jt]s?(x)",
      "**/(components|content|properties)/**/?(*.)+(spec|test).[jt]s?(x)"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "mocks",
      "<rootDir>/components/utilities/thumbs.js"
    ],
    "moduleDirectories": [
      "node_modules",
      "components",
      "mocks",
      "properties"
    ],
    "setupFilesAfterEnv": [
      "./setupTests.js"
    ],
    "moduleNameMapper": {
      "fusion:properties": "<rootDir>/jest/fusionProperties.js",
      "@components(.*)$": "<rootDir>/components/global-components/$1",
      "@utilities(.*)$": "<rootDir>/components/utilities/$1"
    }
  },
  "keywords": [],
